{% extends "::base.html.twig" %}

{% block title %}</br>
Wyniki wyszukiwania dla "{{ query }}"{% endblock %}

{% block body %}
    
    <h1>{{ block('title') }}</h1>
    
    {% if posts|length > 0 %}
        <p>Znaleziono {{ posts|length }} postów.</p>
    {% else %}
        <p>Nie znaleziono żadnych postów spełniających kryteria wyszukiwania. Spróbuj wyszukać ponownie</p>
    {% endif %}
    
    <form action="{{ path('posts_search') }}" class="navbar-form" role="search">
        <div class="form-group">
            <input type="text" name="query" value="{{ query }}" class="form-control" placeholder="Szukaj postów">
        </div>
        <button type="submit" class="btn btn-default">Szukaj</button>
    </form>
    
    {% for post in posts %}

        {% if loop.first or (loop.index % 4) == 0  %}
            <div class="row">
            {% endif %} 

            <div class="col-sm-6 col-md-3">
                <div class="thumbnail clearfix">
                    <img src="http://placehold.it/240x200" alt="" class="img-thumbnail">
                    <div class="caption">
                        <h3>{{ post.title }}</h3>
                        <p>{{ post.description(50, true, ' (...)') }}</p>
{#                        <p>Dostępnych: {{ product.amount }}</p>#}

                       {# <div class="pull-left">
                            <p>
                                <a href="{{ path('product_show', {'id': post.id}) }}" class="btn btn-default" role="button">Pokaż</a>
                            </p>
                        </div>#}
                    </div>
                </div>
            </div>

            {% if loop.last or (loop.index % 4) == 0  %}
            </div>
        {% endif %}

    {% endfor %}
    
{% endblock %}
