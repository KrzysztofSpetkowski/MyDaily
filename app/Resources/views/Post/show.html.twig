{% extends "::base.html.twig" %}

{% block title %}{{post.user}}{% endblock %}

{% block body %}
    
      <div class="thumbnail clearfix">
        <img src="http://placehold.it/240x200" alt="" class="img-thumbnail">
        <div class="caption">
            <h3>{{ post.user }}</h3>
            <p>{{ post.description }}</p>
        </div>
    </div>
    <div class="row">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#comments" aria-controls="comments" role="tab" data-toggle="tab">Komentarze</a></li>
            <li role="presentation"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Opis</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="comments">
                <h4>Komentarze</h4>
                {% if not app.user %}
                    <p>Aby móc dodawać komentarz musisz się wcześniej <a href="{{ path('fos_user_security_login') }}" title="Formularz logowania">zalogować</a>.</p>
                {% else %}
                    <form method="post" novalidate>
                        <div class="form-group">
                            {{ form_row(form.content) }}
                        </div>
                        {{ form_rest(form) }}
                        <input class="btn btn-success" type="submit" value="Dodaj komentarz" />
                    </form>
                {% endif %}
                <br />
                {% for comment in post.comment if comment.verified %}
                    {#<div class="panel panel-default">
                        <div class="panel-body">
                            <div class="pull-right">
                                <span class="text-success">{{ comment.nbVoteUp }}</span> <a href="{{ path('comment_vote_up', {'id': comment.id}) }}" title="Up" class="vote-up"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></a> | 
                                <span class="text-danger">{{ comment.nbVoteDown }}</span> <a href="{{ path('comment_vote_down', {'id': comment.id}) }}" title="Down" class="vote-down"><span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span></a>
                            </div>
                            <p>{{ comment.content }}</p>
                            <small>Dodany {{ comment.createdAt|date('d-m-Y') }} przez {{ comment.user }}</small>
                        </div>
                    </div>#}
                {% else %}
                    <p>Nie ma jeszcze żadnych komentarzy. Dodaj swój jako pierwszy!</p>
                {% endfor %}
            </div>
            
            <div role="tabpanel" class="tab-pane" id="description">
                <p>{{ post.description }}</p>
            </div>
        </div>
    </div>     
{% endblock %}
